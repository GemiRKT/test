package javaapplication1;

import java.awt.*;
import javax.swing.*;
import java.awt.Event.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

/**
 *
 * @author Szatan
 */
public class JavaApplication1 extends JFrame
{
   public JavaApplication1()
   {
      initCompo(); 
   }
   public void initCompo()
   {
      this.setTitle("Malina");
      this.setBounds(300, 300, 300 , 300);
      this.setSize(800, 200);
      this.setDefaultCloseOperation(3);
      this.getContentPane().add(panel ,BorderLayout.CENTER);
      this.getContentPane().add(panel2 ,BorderLayout.NORTH);
      this.getContentPane().add(panel3 ,BorderLayout.SOUTH);
      
      panel2.add(pytanie);
      panel3.add(odpowiedz);
      //panel.
      
      ankieta.add(tak);
      ankieta.add(nie);
      
      panel.add(tak);
      panel.add(nie);
      
      tak.addActionListener(new ActionListener()
      {
          @Override
          public void actionPerformed(ActionEvent e) 
          {
             odpowiedz.setFont(new Font("Kolejna",Font.ITALIC, 20));
             odpowiedz.setText("Oczywiscie ze tak!!! Misia jest najlepsza!!");
             panel3.setBackground(Color.green);
          }    
      }
      
      );
      nie.addActionListener(new ActionListener() {
          @Override
          public void actionPerformed(ActionEvent e)
          {
              odpowiedz.setFont(new Font("Druga",Font.CENTER_BASELINE, 20));
              odpowiedz.setText("Wydaje mi sie ze zle Kliklas! Oczywiscie ze jest najlepsza na swiecie!");
              panel3.setBackground(Color.red);
          }
      }
      );
      
   }
   JPanel panel = new JPanel();
   JLabel pytanie = new JLabel("Czy Malinka jest najsĹ‚odsza na Ĺ›wiecie");
   JPanel panel2 = new JPanel();
   JPanel panel3 = new JPanel();
   JLabel odpowiedz = new JLabel("Powodzenia!");
   ButtonGroup ankieta = new ButtonGroup();
   JRadioButton tak = new JRadioButton("Tak");
   JRadioButton nie = new JRadioButton("Nie");
   
   
    public static void main(String[] args) 
    {
     new JavaApplication1().setVisible(true);// TODO code application logic here
    }
    
}
